LIBS_POLHEMUS=\
    $(THIRD_PARTY_POLHEMUS)/lib/Win32/PDI.lib\

LBIS_BOOST=\
    "$(THIRD_PARTY_BOOST)/lib/libboost_thread-vc100-mt-1_49.lib"\
    "$(THIRD_PARTY_BOOST)/lib/libboost_date_time-vc100-mt-1_49.lib"\
